{{new-todo action="createTodo"}}

<h4>{{model.name}}</h4>

{{#paper-content classNames="md-whiteframe-z1 list-demo"}}
  {{#paper-list}}
    {{#each model.todos as |todo|}}
      {{#paper-item}}
        {{#paper-tile-left}}
          {{paper-checkbox checked=todo.isCompleted action="completeTodo"}}
        {{/paper-tile-left}}

        {{#paper-tile-content}}
          {{todo.name}}
          <span class="list-due-date">{{format-date todo.dueDate}}</span>
          {{remaining-days dueDate=todo.dueDate class="pull-right"}}
        {{/paper-tile-content}}
      {{/paper-item}}
      {{paper-divider}}
    {{/each}}
  {{/paper-list}}
{{/paper-content}}
